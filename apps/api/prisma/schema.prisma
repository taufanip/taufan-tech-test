// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model UserAdmin{
  id Int @id @default(autoincrement())
  firstName String
  lastName String
  email String
  dateOfBirth String?
  gender String
  password String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Employee{
  id Int @id @default(autoincrement())
  firstName String
  lastName String
  email String
  numberPhone String?
  address String
  gender String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  employeeleaves EmployeeLeave[]
}

model EmployeeLeave{
  id Int @id @default(autoincrement())
  reason String
  startDate DateTime
  endDate DateTime
  employeeId Int
  employee Employee @relation(fields: [employeeId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}